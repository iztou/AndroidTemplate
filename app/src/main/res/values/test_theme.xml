<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomActionBarTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">
            @style/MyCustomBar
        </item>
        <item name="android:actionMenuTextColor">
            @color/test_menu_color
        </item>
    </style>


    <style name="MyCustomBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">
            @drawable/test_background
        </item>
    </style>

    <style name="CustomActionBarOverlay" parent="CustomActionBarTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
</resources>