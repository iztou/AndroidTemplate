<?xml version="1.0" encoding="utf-8"?>
<gml.template.androidtemplate.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:drag="bottom"
    app:style="lay_down">

    <ImageView
        android:id="@+id/trash2"
        android:src="@drawable/trash"
        android:layout_width="150dp"
        android:background="#FF3B30"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ff00ddff"
        android:onClick="hideActionBar"/>

</gml.template.androidtemplate.SwipeLayout>
